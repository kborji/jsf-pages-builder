{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": false,
    "module": "ESNext",
    "removeComments": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/ts/index.ts"
  ],
  "plugins": [
    {
      "name": "ts-lit-plugin",
      "strict": true
    }
  ]
}

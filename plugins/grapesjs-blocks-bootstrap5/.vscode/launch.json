{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox against localhost",
            "url": "http://localhost:28080",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "../../../node_modules/**/*.js"
            ]
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:28080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "skipFiles": [
                "../../../node_modules/**/*.js"
            ]
        }
    ]
}